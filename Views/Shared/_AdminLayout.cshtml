        <script>

            $(document).ready(function () {



                $('#select').change(function () {

                    var options = $('#select').val();






                    $.getJSON("/admin/search2?options=" + options)

                        .done(function (data) {
                            $('#table').empty();
                            if (options == "users")
                            {
                                $('#table').append('<thead> <tr> <td> Id </td> <td> Username </td> <td> Name </td> <td> Gender </td> </tr> </thead> <tbody>');
                                for (var i = 0; i < data.length; i++) {
                                    $('#table').append('<tr> <td>' + data[i].id + '</td>        <td>' + data[i].username + '</td>  <td>' + data[i].fname + '</td>  <td>' + data[i].gender + '</td>    </tr>');
                                }
                                $('#table').append('</tbody>');
                            }
                            if (options == "admins")
                            {
                                $('#table').append('<thead> <tr> <td> Id </td> <td> UserName</td> </tr> </thead><tbody>');
                                for (var i = 0; i < data.length; i++) {
                                    $('#table').append('<tr> <td>' + data[i].id + '</td>        <td>' + data[i].username + '</td>  </tr>');
                                }
                                $('#table').append('</tbody>');

                            }



                        })
                    .fail(function (jqxhr, textStatus, error) {
                        alert('Error =' + error );
                    })

                });
            });
